{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true, // Enable source maps,
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules",
    "build.js"
  ],
  "types": [
    "node",
    "aws-sdk"
  ]
}